<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewBriefingFragment"
    android:orientation="vertical"
    android:layout_marginBottom="48dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_new_briefing"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:layout_gravity="center"/>

        <!--TextViews for the form-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_proj_title"/>
            <EditText
                android:id="@+id/new_briefing_proj_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_proj_title"
                android:maxLines="1"
                android:singleLine="true"
                android:autofillHints="@string/prompt_nb_proj_title"
                android:inputType="text"
                android:textSize="20sp"
                tools:ignore="UnusedAttribute" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_cl_name"/>
            <EditText
                android:id="@+id/new_briefing_cl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_cl_name"
                android:maxLines="1"
                android:singleLine="true"
                android:autofillHints="@string/prompt_nb_cl_name"
                tools:ignore="UnusedAttribute"
                android:textSize="20sp"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_cl_phone"/>
            <EditText
                android:id="@+id/new_briefing_cl_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_cl_phone"
                android:maxLines="1"
                android:singleLine="true"
                android:autofillHints="@string/prompt_nb_cl_phone"
                tools:ignore="UnusedAttribute"
                android:textSize="20sp"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_cl_email"/>
            <EditText
                android:id="@+id/new_briefing_cl_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_cl_email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:autofillHints="@string/prompt_nb_cl_email"
                tools:ignore="UnusedAttribute"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_examples"/>
            <EditText
                android:id="@+id/new_briefing_examples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_examples"
                android:maxLines="1"
                android:singleLine="true"
                android:autofillHints="@string/prompt_nb_examples"
                android:inputType="text"
                tools:ignore="UnusedAttribute"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_num_pages"/>

            <EditText
                android:id="@+id/new_briefing_num_pages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_num_pages"
                android:maxLines="1"
                android:singleLine="true"
                android:autofillHints="@string/prompt_nb_num_pages"
                tools:ignore="UnusedAttribute"
                android:inputType="number"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_social_media"/>
            <EditText
                android:id="@+id/new_briefing_social_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_social"
                android:maxLines="1"
                android:singleLine="true"
                android:autofillHints="@string/prompt_nb_social"
                tools:ignore="UnusedAttribute"
                android:inputType="text"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_outline"/>
            <EditText
                android:id="@+id/new_briefing_outline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_outline"
                android:maxLines="1"
                android:singleLine="true"
                android:autofillHints="@string/prompt_nb_outline"
                tools:ignore="UnusedAttribute"
                android:inputType="text"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_objective"/>
            <EditText
                android:id="@+id/new_briefing_objective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_objective"
                android:maxLines="1"
                android:singleLine="true"
                android:autofillHints="@string/prompt_nb_objective"
                tools:ignore="UnusedAttribute"
                android:inputType="text"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_description"/>
            <EditText
                android:id="@+id/new_briefing_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_description"
                android:maxLines="4"
                android:minLines="4"
                android:singleLine="false"
                android:autofillHints="@string/prompt_nb_description"
                tools:ignore="UnusedAttribute"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_features"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/new_briefing_tag_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.google.android.material.chip.ChipGroup>
            <EditText
                android:id="@+id/new_briefing_features"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_features"
                android:maxLines="1"
                android:singleLine="true"
                android:autofillHints="@string/prompt_nb_features"
                tools:ignore="UnusedAttribute"
                android:inputType="text" />
        </LinearLayout>

        <CheckBox
            android:id="@+id/new_briefing_has_visual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prompt_nb_has_visual"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>

        <CheckBox
            android:id="@+id/new_briefing_has_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prompt_nb_has_logo"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>

        <CheckBox
            android:id="@+id/new_briefing_has_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prompt_nb_has_current"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_time_goal"/>
            <EditText
                android:id="@+id/new_briefing_time_goal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_time_goal"
                android:inputType="none"
                android:focusable="false"
                android:autofillHints="@string/prompt_nb_time_goal"
                tools:ignore="UnusedAttribute"
                android:textSize="20sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:text="@string/label_cost"/>
            <EditText
                android:id="@+id/new_briefing_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/prompt_nb_cost"
                android:maxLines="1"
                android:singleLine="true"
                android:autofillHints="@string/prompt_nb_cost"
                android:inputType="numberDecimal"
                tools:ignore="UnusedAttribute"
                android:textSize="20sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/new_briefing_button"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/action_new_briefing"
            android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            />

    </LinearLayout>
</ScrollView>
